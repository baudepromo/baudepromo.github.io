---
import Layout from "../../layouts/MainLayout.astro";
---

<Layout title="Register">
  <div class="login-container">
    <div class="login-card">
      <div class="header">
        <h1>Criar conta</h1>
        <p>JÃ¡ possui uma conta? <a href="/api/signin">Entrar agora</a></p>
      </div>

      <form action="/api/auth/register" method="post" class="login-form">
        <div class="input-group">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" placeholder="seu@email.com" required />
        </div>

        <div class="input-group">
          <label for="password">Senha</label>
          <input type="password" name="password" id="password" placeholder="Crie uma senha forte" required />
        </div>

        <button type="submit" class="btn-primary">Cadastrar</button>
      </form>
    </div>
  </div>
</Layout>

<style>
  :root {
    --primary-orange: #ff6b00;
    --primary-orange-hover: #e65100;
    --bg-light: #fff7ed;
    --text-dark: #1f2937;
    --text-gray: #6b7280;
    --white: #ffffff;
    --border-color: #e5e7eb;
  }

  .login-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--bg-light);
    background-image: radial-gradient(#ff6b0015 1px, transparent 1px);
    background-size: 20px 20px;
    font-family: 'Inter', system-ui, sans-serif;
  }

  .login-card {
    background: var(--white);
    padding: 2.5rem;
    border-radius: 16px;
    box-shadow: 0 10px 25px -5px rgba(255, 107, 0, 0.1), 
                0 8px 10px -6px rgba(0, 0, 0, 0.05);
    width: 100%;
    max-width: 400px;
    border: 1px solid rgba(255, 107, 0, 0.1);
  }

  .header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .header h1 {
    font-size: 1.75rem;
    color: var(--text-dark);
    margin-bottom: 0.5rem;
    font-weight: 700;
  }

  .header p {
    color: var(--text-gray);
    font-size: 0.95rem;
  }

  .header a {
    color: var(--primary-orange);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
  }

  .header a:hover {
    color: var(--primary-orange-hover);
    text-decoration: underline;
  }

  .login-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .input-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-dark);
  }

  input {
    padding: 0.75rem 1rem;
    border-radius: 8px;
    border: 1px solid var(--border-color);
    font-size: 1rem;
    transition: all 0.2s ease;
    outline: none;
    background-color: #f9fafb;
  }

  input:focus {
    border-color: var(--primary-orange);
    box-shadow: 0 0 0 3px rgba(255, 107, 0, 0.15);
    background-color: var(--white);
  }

  button {
    cursor: pointer;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 8px;
    padding: 0.85rem;
    transition: all 0.2s ease;
    border: none;
  }

  .btn-primary {
    background-color: var(--primary-orange);
    color: var(--white);
    margin-top: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(255, 107, 0, 0.3);
  }

  .btn-primary:hover {
    background-color: var(--primary-orange-hover);
    transform: translateY(-1px);
    box-shadow: 0 6px 8px -1px rgba(255, 107, 0, 0.4);
  }

  .btn-primary:active {
    transform: translateY(0);
  }

  .divider {
    display: flex;
    align-items: center;
    text-align: center;
    color: var(--text-gray);
    font-size: 0.85rem;
    margin: 0.5rem 0;
  }

  .divider::before,
  .divider::after {
    content: '';
    flex: 1;
    border-bottom: 1px solid var(--border-color);
  }

  .divider::before {
    margin-right: .5em;
  }

  .divider::after {
    margin-left: .5em;
  }

  .btn-github {
    background-color: #24292f;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .btn-github:hover {
    background-color: #1a1e23;
  }

  .github-icon {
    width: 20px;
    height: 20px;
  }
</style>