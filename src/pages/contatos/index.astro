---
import Global from '../../components/global.astro';
import Layout from '../../layouts/MainLayout.astro';
---
<Layout>
    <style is:inline>
      .contact-info h1 {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 20px;
      /* Aplica o gradiente no texto */
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .contact-info p {
      color: var(--text-muted);
      font-size: 1.1rem;
      margin-bottom: 30px;
      line-height: 1.6;
    }

    .social-links {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .social-item {
      display: flex;
      align-items: center;
      gap: 15px;
      color: var(--text-dark);
      text-decoration: none;
      background: var(--white);
      padding: 18px 25px;
      border-radius: 50px; /* Estilo Pill Button da nova identidade */
      font-weight: 700;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      border: 1px solid transparent;
    }

    .social-item:hover {
      transform: translateY(-3px);
      box-shadow: var(--card-shadow);
      border-color: #ff4b4b;
      color: #ff4b4b;
    }

    /* Link de voltar */
    .back-link {
      display: inline-block;
      margin-top: 30px;
      color: var(--text-muted);
      text-decoration: none;
      font-weight: 700;
      transition: 0.3s;
    }
    .back-link:hover {
      color: #ff4b4b;
      transform: translateX(-5px);
    }

    /* --- LADO DIREITO: FORMUL√ÅRIO --- */
    .contact-form {
      background: var(--white);
      padding: 40px;
      border-radius: 20px; /* Borda arredondada suave */
      box-shadow: var(--card-shadow);
      border: 1px solid rgba(0,0,0,0.02);
    }

    .form-group {
      margin-bottom: 25px;
    }

    .form-group label {
      display: block;
      margin-bottom: 10px;
      color: var(--text-dark);
      font-weight: 700;
      font-size: 0.95rem;
    }

    .form-group input, 
    .form-group textarea {
      width: 100%;
      padding: 15px;
      border-radius: 12px;
      border: 2px solid var(--input-border);
      background: #fafafa;
      color: var(--text-dark);
      font-size: 1rem;
      font-family: 'Inter', sans-serif;
      transition: 0.3s;
    }

    .form-group input:focus, 
    .form-group textarea:focus {
      outline: none;
      border-color: #ff4b4b;
      background: #fff;
      box-shadow: 0 0 0 4px rgba(255, 75, 75, 0.1);
    }

    /* Bot√£o de Enviar */
    .btn-send {
      width: 100%;
      background: var(--primary-gradient);
      color: white;
      border: none;
      padding: 16px;
      border-radius: 50px;
      font-weight: 700;
      font-size: 1.1rem;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .btn-send:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 20px rgba(255, 75, 75, 0.3);
    }

    /* --- RESPONSIVIDADE --- */
    @media (max-width: 768px) {
      .container {
        grid-template-columns: 1fr;
        margin-top: 20px;
        gap: 30px;
      }
      
      .contact-info {
        text-align: center;
      }

      .contact-info h1 {
        font-size: 2rem;
      }

      .social-links {
        align-items: center; /* Centraliza bot√µes no mobile */
      }
      
      .social-item {
        width: 100%;
        justify-content: center;
        max-width: 400px;
      }

      .contact-form {
        padding: 25px;
      }
    }
    body {
      background-color: var(--bg-body);
      color: var(--text-dark);
      font-family: 'Inter', sans-serif;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    /* --- LAYOUT PRINCIPAL --- */
    .container {
      max-width: 1000px;
      margin: 40px auto;
      padding: 20px;
      display: grid;
      grid-template-columns: 1fr 1.2fr; /* Lado do formul√°rio um pouco maior */
      gap: 50px;
      align-items: start;
    }
    </style>

