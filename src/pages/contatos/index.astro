    <style is:inline>
    /* 1. RESET E ESTRUTURA BASE */
    body {
      background-color: var(--bg-body);
      color: var(--text-dark);
      font-family: 'Inter', sans-serif;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 1100px;
      margin: 20px auto;
      padding: 20px;
      display: grid;
      grid-template-columns: 1fr 1.2fr; /* Lado a lado no Desktop */
      gap: 40px;
      align-items: start;
    }

    /* 2. TEXTOS */
    .contact-info h1 {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: 15px;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .contact-info p {
      color: var(--text-muted);
      font-size: 1.1rem;
      margin-bottom: 30px;
      line-height: 1.6;
    }

    /* 3. BOT√ïES SOCIAIS */
    .social-links {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .social-item {
      display: flex;
      align-items: center;
      gap: 15px;
      color: var(--text-dark);
      text-decoration: none;
      background: var(--white);
      padding: 16px 25px;
      border-radius: 50px;
      font-weight: 700;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      border: 1px solid rgba(0,0,0,0.05);
    }

    .social-item:hover {
      transform: translateY(-3px);
      border-color: #ff4b4b;
      color: #ff4b4b;
    }

    /* 4. FORMUL√ÅRIO */
    .contact-form {
      background: var(--white);
      padding: 35px;
      border-radius: 24px;
      box-shadow: var(--card-shadow);
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      margin-bottom: 8px;
      font-weight: 700;
      font-size: 0.9rem;
    }

    .form-group input, 
    .form-group textarea {
      width: 100%;
      padding: 14px;
      border-radius: 12px;
      border: 2px solid #eee;
      background: #fdfdfd;
      font-family: inherit;
      box-sizing: border-box; /* Essencial para n√£o "vazar" da tela */
    }

    .btn-send {
      width: 100%;
      background: var(--primary-gradient);
      color: white;
      border: none;
      padding: 16px;
      border-radius: 50px;
      font-weight: 700;
      font-size: 1rem;
      cursor: pointer;
      text-transform: uppercase;
      transition: 0.3s;
    }

    /* 5. RESPONSIVIDADE (MOBILE) */
    @media (max-width: 850px) {
      .container {
        grid-template-columns: 1fr; /* Coluna √∫nica no celular */
        margin-top: 10px;
        gap: 40px;
        padding: 15px;
      }
      
      .contact-info {
        text-align: center;
      }

      .contact-info h1 {
        font-size: 2rem;
      }

      .social-links {
        align-items: stretch; /* Bot√µes ocupam a largura total */
      }

      .social-item {
        justify-content: center;
      }

      .contact-form {
        padding: 25px 20px;
      }
      
      .back-link {
        display: block;
        text-align: center;
        margin-top: 20px;
      }
    }
    </style>

<div class="container">
