---
// src/components/SEO.astro
import { SITE_CONFIG } from "./constants"; 
import { getAbsoluteUrl, getPageTitle } from './utils'; 

interface Props {
  title?: string;
  ogTitle?: string;
  description?: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
  type?: 'website' | 'article';
  // NOVO: Define o estilo da imagem gerada
  imageMode?: 'banner' | 'icon'; 
}

const {
  title,
  ogTitle,
  description = SITE_CONFIG.description,
  image,
  canonical,
  noindex = false,
  type = 'website',
  // Padrão é 'banner' se não for especificado
  imageMode = 'banner', 
} = Astro.props;

// 1. Título do Navegador (Aba)
const finalTitle = getPageTitle(title);

// 2. Título das Redes Sociais (Card)
const socialTitle = ogTitle || finalTitle;

// Garante que a URL canônica seja absoluta
const finalCanonical = canonical 
  ? getAbsoluteUrl(canonical) 
  : new URL(Astro.url.pathname, Astro.site || Astro.url.origin).href;

// --- Lógica do Vercel OG ---

const siteBase = Astro.site ? Astro.site.origin : Astro.url.origin;
let finalImage: string;

if (image) {
  // Se uma imagem manual foi passada
  if (image.startsWith('http')) {
    finalImage = image;
  } else {
    finalImage = new URL(image, siteBase).href;
  }
} else {
  // Geração da URL Dinâmica
  const ogUrl = new URL('/og-image.png', siteBase);
  
  if (socialTitle) ogUrl.searchParams.set('title', socialTitle);
  if (description) ogUrl.searchParams.set('description', description);
  
  // AQUI: Passamos o modo para o endpoint de geração de imagem
  ogUrl.searchParams.set('mode', imageMode); 
  
  finalImage = ogUrl.href;
}

// Lógica Opcional: Ajustar o card do Twitter baseado no modo
// 'summary_large_image' é o banner grande. 'summary' é o ícone pequeno ao lado do texto.
const twitterCardType = imageMode === 'icon' ? 'summary' : 'summary_large_image';

---

<head>
  {/* Título da Aba do Navegador */}
  <title>{finalTitle}</title>
  
  <meta name="description" content={description} />
  <link rel="canonical" href={finalCanonical} />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta charset="UTF-8" />
  <link rel="icon" href="/favicon.svg" />
  <link rel="stylesheet" href="/styles/global.css">

  {noindex && <meta name="robots" content="noindex, nofollow" />}

  {/* Open Graph / Facebook / WhatsApp */}
  <meta property="og:type" content={type} />
  <meta property="og:url" content={finalCanonical} />
  <meta property="og:title" content={socialTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={finalImage} />
  <meta property="og:image:alt" content={socialTitle}>
  
  {/* Ajusta o tamanho esperado dependendo do modo */}
  <meta property="og:image:type" content="image/jpeg" />
  <meta property="og:image:width" content={imageMode === 'icon' ? '600' : '1200'} />
  <meta property="og:image:height" content={imageMode === 'icon' ? '600' : '630'} />
  
  <meta property="og:site_name" content={SITE_CONFIG.title} />

  {/* Twitter */}
  {/* AQUI: Usamos a variável dinâmica para o tipo de card */}
  <meta property="twitter:card" content={twitterCardType} />
  <meta property="twitter:url" content={finalCanonical} />
  <meta property="twitter:title" content={socialTitle} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={finalImage} />
</head>